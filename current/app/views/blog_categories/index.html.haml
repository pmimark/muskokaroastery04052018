- content_for :title do
  Listing Blog Categories

%table.admin
  %tr
    %th Name
    %th Description
    %th
    %th

  - @blog_categories.each do |blog_category|
    %tr{ :class => "#{ cycle("even", "odd") }" }
      %td= blog_category.name
      %td= blog_category.description
      %td= link_to 'Edit', edit_blog_category_path(blog_category)
      %td= link_to 'Destroy', blog_category, :confirm => 'Are you sure? All blog posts in this category will be lost!', :method => :delete

- content_for :sidebar do
  - if current_user and current_user.is_admin?
    %p= link_to "New Category", new_blog_category_path, :class => "feature-button"
    %br
    %p= link_to "Manage Blog Posts", blog_path
