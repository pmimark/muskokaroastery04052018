= form_for @payment_notification do |f|
  -if @payment_notification.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment_notification.errors.count, "error")} prohibited this payment_notification from being saved:"
      %ul
        - @payment_notification.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :params
    = f.text_area :params
  .field
    = f.label :cart_id
    = f.text_field :cart_id
  .field
    = f.label :order_id
    = f.text_field :order_id
  .field
    = f.label :status
    = f.text_field :status
