%header.menu-header
  %button.menu-close-button#menu-close-button
    %i.ionicon-close

%ul.menu-list
  %li#mm-home
    = link_to 'Home', root_url, class: 'category-link'
  %li#mm-meet
    %button.menu-toggle-button
      %i.ion
    = link_to 'Meet', meet_path, class: 'category-link'
    %ul.sub-menu-list
      - section = Section.where(slug: 'meet').first
      - section.pages.each do |page|
        - unless page.hidden
          %li{ id: "mm-#{ page.slug }" }
            = link_to page.name, show_page_path(section.slug, page.slug)
  %li#mm-learn
    %button.menu-toggle-button
      %i.ion
    = link_to 'Learn', learn_path, class: 'category-link'
    %ul.sub-menu-list
      - section = Section.where(slug: 'learn').first
