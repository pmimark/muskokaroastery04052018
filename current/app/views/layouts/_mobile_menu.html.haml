        - unless page.hidden
          %li{ id: "mm-#{ page.slug }" }
            = link_to page.name, show_page_path(section.slug, page.slug)
  %li#mm-shop
    %button.menu-toggle-button
      %i.ion
    = link_to 'Shop', shop_path, class: 'category-link'
    %ul.sub-menu-list
      %li#mm-portfolio
        = link_to 'Portfolio', shop_path
      - @product_types.each do |product_type|
        %li{ id: "mm-#{ product_type.slug }" }
          = link_to product_type.name, shop_category_path(product_type.slug)
      %li#mm-checkout
        = link_to 'Checkout', shop_checkout_path
  %li#mm-sustain
    %button.menu-toggle-button
      %i.ion
    = link_to 'Sustain', sustain_path, class: 'category-link'
    %ul.sub-menu-list
      - section = Section.where(slug: 'sustain').first
      - section.pages.each do |page|
        - unless page.hidden
          %li{ id: "mm-#{ page.slug }" }
            = link_to page.name, show_page_path(section.slug, page.slug)
  %li#mm-blog
    -# %button.menu-toggle-button
