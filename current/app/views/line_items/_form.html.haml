= form_for @line_item do |f|
  -if @line_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@line_item.errors.count, "error")} prohibited this line_item from being saved:"
      %ul
        - @line_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :product_id
    = f.text_field :product_id
  .field
    = f.label :quantity
    = f.text_field :quantity
  .field
    = f.label :order_id
    = f.text_field :order_id
  .field
    = f.label :item_number
    = f.text_field :item_number
  .field
    = f.label :item_price
    = f.text_field :item_price
  .actions
    = f.submit 'Save'
