.field
  .label
    = f.label :shipping_name, "Name"
    .optional (optional)
    .hint To whom you're shipping the coffee.
  .input
    = f.text_field :shipping_name, :placeholder => "Jane Smith", :value => (current_user.shipping_address if current_user)
  .error
.field
  .label
    = f.label :shipping_address, "Street Address"
    .hint Where the coffee should go.
  .input
    = f.text_field :shipping_address, :placeholder => "123 Main Street", :value => (current_user.shipping_address if current_user)
  .error
.field
  .label
    = f.label :shipping_address_optional, "Apt., Suite, Bldg."
    .optional (optional)
    .hint Or any special instructions.
  .input
    = f.text_field :shipping_address_optional, :placeholder => "Apt. #345, South Bldg.", :value => (current_user.shipping_address_optional if current_user)
  .error
.field
  .label
    = f.label :shipping_city
    .hint Where the coffee will be shipped.
  .input
    = f.text_field :shipping_city, :placeholder => "Toronto", :value => (current_user.shipping_city if current_user)
  .error
.field
  .label
    = f.label :shipping_province
    .hint Province, State, Territory, County.
  .input
    = f.text_field :shipping_province, :placeholder => "Ontario", :value => (current_user.shipping_province if current_user)
  .error
.field
  .label
    = f.label :shipping_country
    .hint Where in the world.
  .input
    = country_select "order", "shipping_country", ["Canada", "United States"] # Default value for this field is set in the controller on the @order model to make this work.
  .error
.field
  .label
    = f.label :shipping_postal, "Postal Code"
    .hint Post Code or ZIP
  .input
    = f.text_field :shipping_postal, :placeholder => "M6G 3B2", :value => (current_user.shipping_postal if current_user)
  .error
.field
  .label
    = f.label :shipping_phone, "Telephone Number"
    .hint Only used in case of delivery issues.
  .input
    = f.text_field :shipping_phone, :placeholder => "416.123.4567", :value => (current_user.shipping_phone if current_user)
  .error
