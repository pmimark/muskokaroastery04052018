- if @images.size > 0
  .clearfix
    - @images.each do |image|
      %a{ :href => "javascript:void(0)", 
          "data-url" => "#{ image.image.url(:medium) }",
          "data-caption" => "#{ image.caption }",
          :class => "tinymce-insert-image-thumb",
          :style => "float: left; width: 60px; height: 60px; margin: 3px;" }
        = image_tag image.image.url(:tiny_square)
  / .clearfix
  /   = paginate @images
  %br
- else
  No images have been uploaded yet.
